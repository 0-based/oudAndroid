<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/parent_item_follower_profile">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/playlist_image_test"
        android:id="@+id/image_item_follower_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_item_follower_profile_name"
        android:layout_toRightOf="@id/image_item_follower_profile"
        android:layout_centerVertical="true"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:text="test text"

        app:layout_constraintStart_toEndOf="@id/image_item_follower_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btn_item_profile_user_or_artist_follow"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/outlined_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="follow"

        />

    <Button
        android:id="@+id/btn_item_profile_user_or_artist_un_follow"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/filled_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="unfollow"
        android:textColor="@color/colorPrimaryDark"
        />


</androidx.constraintlayout.widget.ConstraintLayout>