<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_generic_vertical_adapter_item">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_generic_vertical_adapter_item"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_generic_vertical_adapter_item"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_generic_vertical_adapter_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Item"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_generic_vertical_adapter_item"
        app:layout_constraintStart_toEndOf="@id/img_generic_vertical_adapter_item"

        tools:layout_editor_absoluteX="150dp" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_generic_vertical_adapter_item"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_generic_vertical_adapter_item"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="273dp" />


</androidx.constraintlayout.widget.ConstraintLayout>